<div class="container">
    <div id="wishes">
        <h1>Well Wishes for Sam and Shannon</h1>
        <h2>Provide well wishes for Sam and Shannon for their future life together</h2>
        <hr/>
        <form id="wishesForm" action="saveMessage" method="post">
            <table width="100%" border="0" cellspacing="0" cellpadding="5">
                <tr>
                    <td valign="top" align="left"><label for="message">Message</label></td>
                    <td><textarea name="message" id="message" cols="35" rows="5"></textarea></td>
                </tr>

                <tr>
                    <td valign="top" align="left" width="70px"><label for="name">Name</label></td>
                    <td align="left"><input class="textInput" type="text" name="name" id="name" size="49"/></td>
                </tr>

                <tr>
                    <td colspan="2">
                        <input type="submit" name="button" id="button" value="Submit" />
                        <input type="reset" name="button2" id="button2" value="Reset" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <div id="wishesToggle">
        <img src="/img/down_arrow.png" />
    </div>

</div>

